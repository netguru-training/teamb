%h1 Listing bets

%table
  %thead
    %tr
      %th User
      %th Match
      %th Team a goals
      %th Team b goals
      %th
      %th
      %th

  %tbody
    - bets.each do |bet|
      %tr
        %td= bet.user_id
        %td= bet.match_id
        %td= bet.team_a_goals
        %td= bet.team_b_goals
        %td= link_to 'Show', match_bet_path(bet.match,bet)
        %td= link_to 'Edit', edit_match_bet_path(bet.match,bet)
        %td= link_to 'Destroy', match_bet_path(bet.match,bet), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

